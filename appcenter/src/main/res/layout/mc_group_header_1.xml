<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@id/title_layout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="bottom"
              android:minHeight="@dimen/mz_group_interval_header_minHeight"
              android:orientation="vertical">

    <TextView
        android:id="@id/title_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/mz_list_card_1_little_title_height"
        android:background="@color/mz_list_text_color_alpha_4"
        android:gravity="center_vertical"
        android:paddingLeft="?android:listPreferredItemPaddingLeft"
        android:paddingRight="?android:listPreferredItemPaddingRight"
        android:textAppearance="?android:textAppearanceSmall"
        android:textStyle="bold"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@id/title_content_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/mz_list_card_1_title_content_padding_left">

        <ImageView
            android:id="@id/img_cursor"
            android:layout_width="@dimen/mz_list_category_identity_width"
            android:layout_height="@dimen/mz_list_category_identity_height"
            android:layout_gravity="center"
            android:background="?mzThemeColor"
            android:gravity="center"/>

        <TextView
            android:id="@android:id/text1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mz_list_card_1_title_height"
            android:background="#fffafafa"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/mz_list_card_1_text_pic_padding"
            android:paddingRight="?android:listPreferredItemPaddingRight"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/mz_list_text_color"
            android:textSize="@dimen/mz_list_card_1_title_text_size"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/mz_list_card_1_divider_padding_right"
            android:gravity="right|center"
            android:orientation="horizontal">

            <TextView
                android:id="@android:id/text2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/mz_list_card_1_title_height"
                android:layout_gravity="right"
                android:gravity="right|center"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/mz_list_text_color"
                android:textSize="@dimen/mz_list_card_2_title_text_size"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@android:id/background"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/mz_group_interval_header_divider_height"
        android:background="@drawable/mz_card_new_list_divider"
        android:gravity="bottom"
        android:paddingLeft="@dimen/mz_list_card_1_divider_padding_left"
        android:paddingRight="@dimen/mz_list_card_1_divider_padding_right"
        android:visibility="gone"/>
</LinearLayout>