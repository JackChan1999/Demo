<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:baselineAligned="false"
              android:orientation="horizontal">

    <include
        android:id="@id/layout"
        layout="@layout/mc_search_layout"
        android:layout_width="0.0dip"
        android:layout_height="32.0dip"
        android:layout_marginLeft="@dimen/mc_search_layout_padding_left"
        android:layout_marginStart="@dimen/mc_search_layout_padding_left"
        android:layout_weight="1.0"/>

    <LinearLayout
        android:id="@id/mc_tv_layout"
        android:layout_width="76.0dip"
        android:layout_height="fill_parent"
        android:gravity="center">

        <TextView
            android:id="@id/mc_search_textView"
            style="?attr/actionButtonStyle"
            android:layout_width="64.0dip"
            android:layout_height="fill_parent"
            android:background="?actionBarItemBackground"
            android:gravity="center"
            android:text="@string/mc_search_button_text"
            android:textAppearance="?actionMenuTextAppearance"
            android:textColor="?actionMenuTextColor"/>
    </LinearLayout>
</LinearLayout>