<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/discovery_item_height"
                android:background="@drawable/mz_list_selector_background"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_list_margin_left"
                android:paddingRight="@dimen/common_list_margin_right">

    <ImageView
        android:id="@id/discovery_icon"
        android:layout_width="@dimen/discovery_icon_imageview_width"
        android:layout_height="@dimen/discovery_icon_imageview_height"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/discovery_title_textview_marginleft"
        android:layout_toRightOf="@id/discovery_icon"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="@color/title_color"
        android:textSize="18.0sp"/>

    <ImageView
        android:id="@id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/mz_arrow_next_right"/>
</RelativeLayout>