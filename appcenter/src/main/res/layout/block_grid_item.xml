<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@id/layout_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/category_card_margin"
    app:cardCornerRadius="@dimen/category_card_radius"
    app:cardElevation="0.0dip">

    <ImageView
        android:id="@id/image"
        android:layout_width="@dimen/category_card_item_width"
        android:layout_height="@dimen/category_card_item_height"
        android:scaleType="fitXY"
        android:src="@drawable/image_background"/>

    <TextView
        android:id="@id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textSize="@dimen/category_item_title_textSize"/>
</android.support.v7.widget.CardView>